<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp"
    android:gravity="center">
    <TableLayout
        android:background="#ddfef8f8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_span="3"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:gravity="center"
                android:padding="4dp"
                android:text="아래에 정보를 입력하세요"
                android:textColor="#fff7f7"
                android:textSize="20dp" />
        </TableRow>
        <TableRow android:padding="3dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="가게 이름 :"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/etname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="3dp" />
        </TableRow>
        <TableRow android:padding="3dp">

            <TextView
                android:layout_width="10dp"
                android:layout_height="188dp"
                android:layout_weight="1"
                android:text="메모"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etmemo"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="기록해주세요"
                android:padding="3dp" />
        </TableRow>
        <TableRow android:padding="3dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tel:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/ettel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="- 빼고 입력"
                android:padding="3dp" />
        </TableRow>
        <TableRow android:padding="3dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="메뉴1:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/etmenu1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="메뉴명 (가격)"
                android:padding="3dp" />
        </TableRow>
        <TableRow android:padding="3dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="메뉴2:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/etmenu2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="메뉴명 (가격)"
                android:padding="3dp" />
        </TableRow>
        <TableRow android:padding="3dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="메뉴3:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/etmenu3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="메뉴명 (가격)"
                android:padding="3dp" />
        </TableRow>
        <TableRow android:padding="3dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Homepage:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/etaddr"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="http://"
                android:background="#ffffff"
                android:padding="3dp" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ddf9c572"
            android:textColor="#ffffff"
            android:onClick="onClicks"
            android:text="취소" />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ddf1c886"
            android:textColor="#ffffff"
            android:onClick="onClicks"
            android:text="추가" />
    </LinearLayout>
</LinearLayout>